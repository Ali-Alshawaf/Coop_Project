@model IEnumerable<CoopProj.Models.Requests>

@{
    ViewData["Title"] = "opportunities";
}



<h1>opportunities</h1>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8">
                        <form class="d-flex flex-wrap align-items-center" asp-action="Index" method="get">
                            <div class="d-flex flex-wrap align-items-center">
                                <label for="inputPassword2" class="visually-hidden">Search</label>
                                <input type="search" class="form-control" id="inputPassword2" placeholder="Search..." name="searchTerm" value="@ViewBag.SearchTerm">
                            </div>
                            <button type="submit" class="btn btn-primary">Search</button>
                        </form>
                    </div>

                </div> <!-- end row -->
            </div>
        </div> <!-- end card -->
    </div><!-- end col-->
</div>
<!-- end row -->


<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-xl-6 col-sm-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start">
                        <div class="avatar-md me-3">
                            <div class="avatar-title bg-light rounded-circle">
                                <img src="@item.Companies.Image" alt="logo" class="avatar-sm rounded-circle">
                            </div>
                        </div>
                        <div class="flex-1">
                            <h4 class="my-1"><a href="javascript:void(0);" class="text-dark"></a></h4>
                            <p class="text-muted text-truncate mb-0">
                                <h2> @Html.DisplayFor(modelItem => item.Companies.Name)</h2>
                                <i class="ri-map-pin-line align-bottom me-1">@Html.DisplayFor(modelItem => item.Location)</i>
                            </p>

                        </div>

                    </div>
                    <hr>
                    <div class="text-muted">
                        <div class="row">
                            <div class="col-4">
                                <div>
                                    <p class="text-truncate mb-0">
                                        @Html.DisplayNameFor(model => model.Application)
                                    </p>
                                    <h5 class="mb-sm-0">
                                        @Html.DisplayFor(modelItem => item.Application)
                                    </h5>
                                </div>
                            </div>
                            <div class="col-3">
                                <div>
                                    <p class="text-truncate mb-0">
                                        @Html.DisplayNameFor(model => model.StartDate)
                                    </p>
                                    <h5 class="mb-sm-0">
                                        @Html.DisplayFor(modelItem => item.StartDate)
                                    </h5>
                                </div>
                            </div>
                            <div class="col-3">
                                <div>
                                    <p class="text-truncate mb-0">
                                        @Html.DisplayNameFor(model => model.EndDate)
                                    </p>
                                    <h5 class="mb-sm-0">
                                        @Html.DisplayFor(modelItem => item.EndDate)
                                    </h5>
                                </div>
                            </div>
                                <div class="col-2">
                                    <!-- Opportunities button -->
                                    <div class="d-flex gap-2 justify-content-lg-end mt-3 mt-lg-0">
                                        <a asp-action="Create" asp-controller="ApplyStudents" asp-route-id="@item.Id" class="btn btn-outline-success">Apply</a>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<!-- end row -->
