@model CoopProj.Models.Students

@{
    ViewData["Title"] = "Details";
}
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table thead th {
            background-color: #f2f2f2;
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table tbody td {
            border: 1px solid #ddd;
            padding: 8px;
        }
</style>
<h1>Student Info</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <div>
                    <div>
                        <a asp-action="StudentForSupervisor" style="font-size: 35px;">
                            <i class="fe-arrow-left"></i>
                        </a>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Student Email</th>
                                <th>UniversityID</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                                <td>@Html.DisplayFor(model => model.Email)</td>
                                <td>@Html.DisplayFor(model => model.UniversityID)</td>

                            </tr>
                        </tbody>
                    </table>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Phone Number</th>
                                    <th>Major</th>
                                    <th>University ID</th>
                                    <th>Supervisor</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayFor(model => model.NumberPhone)</td>
                                    <td>@Html.DisplayFor(model => model.Major.Name)</td>
                                    <td>@Html.DisplayFor(model => model.UniversityID)</td>
                                    <td>@Html.DisplayFor(model => model.Supervisor.Name)</td>

                                </tr>
                            </tbody>
                    </table>


                   
                        </div>
                    </div>

               

                

                </div>
            </div>
        </div>
