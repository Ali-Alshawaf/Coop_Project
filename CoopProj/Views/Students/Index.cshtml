@model IEnumerable<CoopProj.Models.Students>

@{
    ViewData["Title"] = "Students";
}



<script>
    function confirmAccess(studentId) {
        swal({
            title: "Are you sure?",
            text: "This action will grant access to the student.",
            icon: "warning",
            buttons: {
                cancel: "Cancel",
                confirm: {
                    text: "Yes",
                    value: true,
                    visible: true,
                    className: "btn btn-primary",
                    closeModal: true
                }
            }
        }).then(function (confirmed) {
            if (confirmed) {
                accessStudent(studentId);
            }
        });
    }

    function accessStudent(studentId) {
        var form = document.createElement("form");
        form.method = "post";
        form.action = "@Url.Action("ConfirmAccess")";

        var hiddenField = document.createElement("input");
        hiddenField.type = "hidden";
        hiddenField.name = "id";
        hiddenField.value = studentId;

        form.appendChild(hiddenField);
        document.body.appendChild(form);
        form.submit();
    }
    function confirmDelete(studentId) {
        swal({
            title: "Are you sure?",
            text: "This action will delete the student.",
            icon: "warning",
            buttons: {
                cancel: "Cancel",
                confirm: {
                    text: "Yes",
                    value: true,
                    visible: true,
                    className: "btn btn-danger",
                    closeModal: true
                }
            }
        }).then(function (confirmed) {
            if (confirmed) {
                deleteStudent(studentId);
            }
        });
    }

    function deleteStudent(studentId) {
        var form = document.createElement("form");
        form.method = "post";
        form.action = "@Url.Action("ConfirmDelete")";
        
        var hiddenField = document.createElement("input");
        hiddenField.type = "hidden";
        hiddenField.name = "id";
        hiddenField.value = studentId;
        
        form.appendChild(hiddenField);
        document.body.appendChild(form);
        form.submit();
    }
</script>

