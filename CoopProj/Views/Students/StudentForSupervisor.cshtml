@model IEnumerable<CoopProj.Models.Students>

@{
    ViewData["Title"] = "StudentForSupervisor";
}

<h1>Students</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="basic-datatable" class="table dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumberPhone)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Major)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumberPhone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Major.Name)
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-outline-info" asp-action="DetailsS" asp-route-id="@item.Id">Detail<i class="fe-file-text"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>