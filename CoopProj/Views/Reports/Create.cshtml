@model CoopProj.Models.Reports

@{
    ViewData["Title"] = "Create";
}


<div class="row justify-content-center align-items-center vh-100">
    <div class="col-lg-8">
        <div class="card" style="margin-top:-120px;">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input hidden name="ReportId" value="@ViewBag.ReportId"/>
                    <div class="form-group">
                        <label asp-for="SendReports" class="control-label"></label>
                        <input asp-for="SendReports" type="file" accept=".pdf" required class="form-control" />
                        <span asp-validation-for="SendReports" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Notes" class="control-label"></label>
                        <textarea asp-for="Notes" class="form-control" style="height: 150px;"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>


