@model CoopProj.Models.Reports

@{
    ViewData["Title"] = "Details";
}
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table thead th {
            background-color: #f2f2f2;
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table tbody td {
            border: 1px solid #ddd;
            padding: 8px;
        }
</style>

<h1>  
    @Html.DisplayFor(model => model.CreateReport.ReportName.Name)
</h1>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <div>
                        <a href="javascript:void(0);" onclick="window.history.back();" style="font-size:35px; "><i class="fe-arrow-left"></i></a>
                    </div>
                    <br />
                   

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Student Email</th>
                                <th>Time</th>
                                <th>Notes</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.StudentReport.Name)</td>
                                <td>@Html.DisplayFor(model => model.StudentReport.Email)</td>
                                <td>@Html.DisplayFor(model => model.Time)</td>
                                <td>@Html.DisplayFor(model => model.Notes)</td>
                        
                            </tr>
                        </tbody>
                    </table>
                    @if (Model.Grade == null) {
                        <a class="btn btn-primary mt-4" asp-action="Edit" asp-route-id="@Model.Id">Evluate Student</a>
                    }
                    <br />
                    <br />
                    @if (ViewData["NoFile"] == null)
                    {
                        @if (!string.IsNullOrEmpty(ViewData["ReportContent"] as string))
                        {
                            <h3>Report uploaded</h3>
                            <embed src="data:application/pdf;base64,@ViewData["ReportContent"]" width="100%" height="600px" type="application/pdf"></embed>
                        }
                    }
                    else
                    {
                    <h2>@ViewData["NoFile"]</h2>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

